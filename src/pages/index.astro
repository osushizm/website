---
import { getCollection } from 'astro:content';
import BaseLayout from '../components/layout/BaseLayout.astro';
import BlogCard from '../components/blog/BlogCard.astro';
import WorkCard from '../components/works/WorkCard.astro';
import { siteConfig } from '../utils/site';

// ブログ記事を取得（最新3件、下書き除外）
const allBlogPosts = await getCollection('blog', ({ data }) => !data.draft);
const recentBlogPosts = allBlogPosts
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0, 3);

// 成果物を取得（最新3件）
const allWorks = await getCollection('works');
const recentWorks = allWorks
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0, 3);

const githubLink =
  siteConfig.socialLinks.find((link) => link.name === "GitHub") ??
  siteConfig.socialLinks[0];
---

<BaseLayout
  title="ホーム"
  description={siteConfig.description}
>
  <!-- Hero Section -->
  <section class="container mx-auto px-4 py-20">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-5xl md:text-6xl font-bold mb-6">
        {siteConfig.name}
      </h1>
      <p class="text-xl md:text-2xl text-[rgb(var(--color-secondary))] mb-8">
        {siteConfig.tagline}
      </p>
      <p class="text-lg text-[rgb(var(--color-secondary))] max-w-2xl mx-auto leading-relaxed">
        プロダクトの目的を言語化し、設計から実装、運用まで一貫して支える開発を行っています。
        このサイトでは、技術ブログ、成果物、学習メモをまとめています。
      </p>
      <div class="flex justify-center gap-4 mt-8">
        <a href="/blog" class="btn btn-primary">
          ブログを読む
        </a>
        <a href="/works" class="btn btn-secondary">
          成果物を見る
        </a>
      </div>
    </div>
  </section>

  <!-- Recent Blog Posts -->
  <section class="container mx-auto px-4 py-16">
    <div class="max-w-6xl mx-auto">
      <div class="flex justify-between items-center mb-8">
        <h2 class="text-3xl font-bold">最近のブログ記事</h2>
        <a href="/blog" class="text-[rgb(var(--color-primary))] hover:underline">
          すべて見る →
        </a>
      </div>
      
      {recentBlogPosts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {recentBlogPosts.map((post) => (
            <BlogCard
              title={post.data.title}
              description={post.data.description}
              date={post.data.date}
              tags={post.data.tags}
              slug={post.slug}
              coverImage={post.data.coverImage}
            />
          ))}
        </div>
      ) : (
        <p class="text-[rgb(var(--color-secondary))] text-center py-12">
          まだブログ記事がありません
        </p>
      )}
    </div>
  </section>

  <!-- Recent Works -->
  <section class="container mx-auto px-4 py-16">
    <div class="max-w-6xl mx-auto">
      <div class="flex justify-between items-center mb-8">
        <h2 class="text-3xl font-bold">最近の成果物</h2>
        <a href="/works" class="text-[rgb(var(--color-primary))] hover:underline">
          すべて見る →
        </a>
      </div>
      
      {recentWorks.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {recentWorks.map((work) => (
            <WorkCard
              title={work.data.title}
              description={work.data.description}
              tags={work.data.tags}
              slug={work.slug}
              coverImage={work.data.coverImage}
              technologies={work.data.technologies}
            />
          ))}
        </div>
      ) : (
        <p class="text-[rgb(var(--color-secondary))] text-center py-12">
          まだ成果物がありません
        </p>
      )}
    </div>
  </section>

  <!-- GitHub Section -->
  <section class="container mx-auto px-4 py-16">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-3xl font-bold mb-6">GitHub</h2>
      <p class="text-[rgb(var(--color-secondary))] mb-8">
        OSSの活動や個人プロジェクトの進捗はこちらにまとめています。
      </p>
      <a
        href={githubLink?.href}
        target="_blank"
        rel="noopener noreferrer"
        class="btn btn-primary inline-flex items-center gap-2"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
        </svg>
        GitHubプロフィールを見る
      </a>
    </div>
  </section>
</BaseLayout>
