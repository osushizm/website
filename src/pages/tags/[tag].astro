---
import { getCollection } from 'astro:content';
import BaseLayout from '../../components/layout/BaseLayout.astro';
import BlogCard from '../../components/blog/BlogCard.astro';
import WorkCard from '../../components/works/WorkCard.astro';
import { getAllTags, getPostsByTag } from '../../utils/tags';

export async function getStaticPaths() {
  const blogPosts = await getCollection('blog', ({ data }) => !data.draft);
  const works = await getCollection('works');
  const allContent = [...blogPosts, ...works];
  const allTags = getAllTags(allContent);
  
  return allTags.map((tag) => ({
    params: { tag },
  }));
}

const { tag } = Astro.params;

// タグでフィルタリング
const blogPosts = await getCollection('blog', ({ data }) => !data.draft && data.tags.includes(tag));
const works = await getCollection('works', ({ data }) => data.tags.includes(tag));

const sortedBlogPosts = blogPosts.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
const sortedWorks = works.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<BaseLayout
  title={`タグ: ${tag}`}
  description={`「${tag}」タグの付いた記事と成果物の一覧です。`}
>
  <div class="container mx-auto px-4 py-12">
    <div class="max-w-6xl mx-auto">
      <div class="mb-8">
        <a href="/tags" class="text-[rgb(var(--color-primary))] hover:underline mb-4 inline-block">
          ← タグ一覧に戻る
        </a>
        <h1 class="text-4xl font-bold">
          タグ: <span class="text-[rgb(var(--color-primary))]">#{tag}</span>
        </h1>
      </div>
      
      <!-- Blog Posts -->
      {sortedBlogPosts.length > 0 && (
        <section class="mb-12">
          <h2 class="text-2xl font-bold mb-6">ブログ記事 ({sortedBlogPosts.length})</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {sortedBlogPosts.map((post) => (
              <BlogCard
                title={post.data.title}
                description={post.data.description}
                date={post.data.date}
                tags={post.data.tags}
                slug={post.slug}
                coverImage={post.data.coverImage}
              />
            ))}
          </div>
        </section>
      )}
      
      <!-- Works -->
      {sortedWorks.length > 0 && (
        <section>
          <h2 class="text-2xl font-bold mb-6">成果物 ({sortedWorks.length})</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {sortedWorks.map((work) => (
              <WorkCard
                title={work.data.title}
                description={work.data.description}
                tags={work.data.tags}
                slug={work.slug}
                coverImage={work.data.coverImage}
                technologies={work.data.technologies}
              />
            ))}
          </div>
        </section>
      )}
      
      {sortedBlogPosts.length === 0 && sortedWorks.length === 0 && (
        <p class="text-[rgb(var(--color-secondary))] text-center py-12">
          このタグに該当するコンテンツがありません
        </p>
      )}
    </div>
  </div>
</BaseLayout>
